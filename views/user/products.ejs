<%- include('../layout/userHeader.ejs') %>
    
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/home" rel="nofollow">Home</a>
                    <span></span> Shop
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row flex-row-reverse">
                    <div class="col-lg-9">
                        <div class="shop-product-fillter">
                            <div class="totall-product">
                                <p> We found <strong class="text-brand"><%= products.length %></strong> items for you!</p>
                            </div>
                            <div class="sort-by-product-area">
                                <!-- <div class="sort-by-cover mr-10">
                                    <div class="sort-by-product-wrap">
                                        <div class="sort-by">
                                            <span><i class="fi-rs-apps"></i>Show:</span>
                                        </div>
                                        <div class="sort-by-dropdown-wrap">
                                            <span> 50 <i class="fi-rs-angle-small-down"></i></span>
                                        </div>
                                    </div>
                                    <div class="sort-by-dropdown">
                                        <ul>
                                            <li><a class="active" href="#">50</a></li>
                                            <li><a href="#">100</a></li>
                                            <li><a href="#">150</a></li>
                                            <li><a href="#">200</a></li>
                                            <li><a href="#">All</a></li>
                                        </ul>
                                    </div>
                                </div> -->
                                <div class="sort-by-cover">
                                    <div class="sort-by-product-wrap">
                                        <div class="sort-by">
                                            <span><i class="fi-rs-apps-sort"></i>Sort by:</span>
                                        </div>
                                        <div class="sort-by-dropdown-wrap">
                                            <span class="current-sort"> 
                                                <% if (currentSort === 'popularity') { %>
                                                    Popularity
                                                <% } else if (currentSort === 'NewArrivals') { %>
                                                    New Arrivals
                                                <% }
                                                else if (currentSort === 'priceLowToHigh') { %>
                                                    Price: Low to High
                                                <% } else if (currentSort === 'priceHighToLow') { %>
                                                    Price: High to Low
                                                <% }  else if (currentSort === 'AToZ') { %>
                                                    Name: aToZ
                                                <% }  else if (currentSort === 'ZToA') { %>
                                                    Name: zToA
                                                <% } %>
                                               
                                                <i class="fi-rs-angle-small-down"></i></span>
                                        </div>
                                    </div>
                                    <div class="sort-by-dropdown">
                                        <ul>
                                            <li><a class="<%= currentSort === 'popularity' ? 'active' : '' %>" href="/products?category=<%= selectedCategory %>&sort=popularity" data-sort="Popularity">Popularity</a></li>
<li><a class="<%= currentSort === 'NewArrivals' ? 'active' : '' %>" href="/products?category=<%= selectedCategory %>&sort=NewArrivals" data-sort="New Arrivals">New Arrivals</a></li>
<li><a class="<%= currentSort === 'priceLowToHigh' ? 'active' : '' %>" href="/products?category=<%= selectedCategory %>&sort=priceLowToHigh" data-sort="Price: Low to High">Price: Low to High</a></li>
<li><a class="<%= currentSort === 'priceHighToLow' ? 'active' : '' %>" href="/products?category=<%= selectedCategory %>&sort=priceHighToLow" data-sort="Price: High to Low">Price: High to Low</a></li>
<li><a class="<%= currentSort === 'AToZ' ? 'active' : '' %>" href="/products?category=<%= selectedCategory %>&sort=AToZ" data-sort="Name: A to Z">Name: A to Z</a></li>
<li><a class="<%= currentSort === 'ZToA' ? 'active' : '' %>" href="/products?category=<%= selectedCategory %>&sort=ZToA" data-sort="Name: Z to A">Name: Z to A</a></li>

                                         
                                            
                                        </ul>
                                    </div>
                                </div>
                                
        <div class="clear-filters" style="padding-left: 10px;">
            <a href="/products" class="btn btn-sm btn-default">
                <i class="fi-rs-refresh"></i> Clear Filters
            </a>
        </div>
                            </div>
                        </div>
                        <div class="row product-grid-3">
                            <% locals.products.forEach(product => { %>
                            <div class="col-lg-4 col-md-4 col-12 col-sm-6">
                                <div class="product-cart-wrap mb-30">
                                    <div class="product-img-action-wrap">
                                        <div class="product-img product-img-zoom">
                                            <a href="/product/<%= product._id %>">
                                                <img class="default-img" src="<%= product.images[0] %>" alt="">
                                                
                                            </a>
                                        </div>
                                        <div class="product-action-1">
                                            <a aria-label="Add To Wishlist" class="action-btn hover-up add-to-wishlist <% if (userWishlist.includes(product._id.toString())) { %>wishlist-added<% } %>" data-product-id="<%= product._id %>">
                    <i class="fi-rs-heart <% if (userWishlist.includes(product._id.toString())) { %>active<% } %>"></i>
                </a>
                     
                                            
                                        </div>
                                        <div class="product-badges product-badges-position product-badges-mrg">
                                            <span class="hot">Hot</span>
                                        </div>
                                    </div>
                                    <div class="product-content-wrap">
                                        <div class="product-category">
                                            <a href="shop-grid-right.html"><%= product.brand %></a>
                                        </div>
                                        <h2><a href="/product/<%= product._id %>"><%= product.name %></a></h2>
                                        <div class="rating-result" title="90%">
                                            <span>
                                                <span>90%</span>
                                            </span>
                                        </div>
                                        <div class="product-price">
                                       <% if (product.salesPrice && product.salesPrice < product.normalPrice) { %>
                                    <span class="sales-price">₹<%= product.salesPrice %></span>
                              <span class="old-price"><del>₹<%= product.normalPrice %></del></span> 
                             <% } else { %>
                       <span class="normal-price">₹<%= product.normalPrice %></span>
                                       <% } %>
                        </div>
                                        <div class="product-action-1 show">
                                            <a aria-label="Add To Cart" class="action-btn hover-up" href="shop-cart.html"><i class="fi-rs-shopping-bag-add"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            
                            <% }); %>
                            
                            
                        </div>
                    
                        <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
                            <nav aria-label="Page navigation example">
                              
                                <ul class="pagination justify-content-start">
                                    <% if (currentPage > 1) { %>
  <li class="page-item">
    <a class="page-link" href="?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&sort=<%= currentSort %>">&laquo;</a>
  </li>
<% } %>
<% for (let i = 1; i <= totalPages; i++) { %>
  <li class="page-item <%= currentPage === i ? 'active' : '' %>">
    <a class="page-link" href="?page=<%= i %>&category=<%= selectedCategory %>&sort=<%= currentSort %>"><%= i %></a>
  </li>
<% } %>
<% if (currentPage < totalPages) { %>
  <li class="page-item">
    <a class="page-link" href="?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&sort=<%= currentSort %>">&raquo;</a>
  </li>
<% } %>
                                    
                                  </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-lg-3 primary-sidebar sticky-sidebar">
                        <div class="widget-category mb-30">
                            <h5 class="section-title style-1 mb-30 wow fadeIn animated">Category</h5>
                            <ul class="categories">
                                <% locals.categories.forEach(category => { %>
                                    <li><a href="/products?category=<%= category._id %>&sort=<%= currentSort %>"><%= category.name %></a></li>
                                <% }); %>
                            </ul>
                        </div>
                        
                        <div class="sidebar-widget price_range range mb-30">
                            <div class="widget-header position-relative mb-20 pb-10">
                                <h5 class="widget-title mb-10">Filter by price</h5>
                                <div class="bt-1 border-color-1"></div>
                            </div>
                            <form id="price-filter-form" method="GET" action="/products">
                            <div class="price-filter">
                                <div class="price-filter-inner">
                                    <div id="slider-range"></div>
                                    <div class="price_slider_amount">
                                        <div class="label-input">
                                            <span>Range:</span><input type="text" id="amount" name="price" placeholder="Add Your Price"  readonly/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
    <input type="hidden" id="price-min" name="price-min" />
    <input type="hidden" id="price-max" name="price-max" />
                            <input type="hidden" name="sort" value="<%= currentSort %>" />
    <button type="submit" class="btn btn-sm btn-default">
        <i class="fi-rs-filter mr-5"></i> Filter
    </button>
</form>
                        </div>
                     
                        <div class="sidebar-widget product-sidebar mb-30 p-30 bg-grey border-radius-10">
    <div class="widget-header position-relative mb-20 pb-10">
        <h5 class="widget-title mb-10">New Products</h5>
        <div class="bt-1 border-color-1"></div>
    </div>

    <% latestProducts.forEach(product => { %>
    <div class="single-post clearfix">
        <div class="image">
            <img src="<%= product.images[0] %>" alt="<%= product.name %>">
        </div>
        <div class="content pt-10">
            <h5><a href="/product/<%= product._id %>"><%= product.name %></a></h5>
            <p class="price mb-0 mt-5">₹<%= product.salesPrice %></p>
            <div class="product-rate">
                                        <div class="product-rating" style="width:60%"></div>
                                    </div>
        </div>
    </div>
    <% }) %>

</div>

        </section>
    </main>
    
        
        <%- include('../layout/userFooter.ejs') %>