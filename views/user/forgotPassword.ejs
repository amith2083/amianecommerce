<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMian</title>
    <link rel="stylesheet" href="/css/userStyle.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

</head>
<body>
    
    
    <div class="accout-page">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    <img src="/imgs/user/loginimage.png" width="100%">
                </div>
                <div class="col-2">
                    <div class="form-container">
                        <div class="form-btn">
                            <span>Forgot password</span>
                            <hr id="indicator" style="transform: translate(10px);">
                        </div>
                        
                        <form id="forgotpassword" action="/forgotpassword" method="post" >
                            <!-- <input type="hidden" name="email" value="<%# email %>"> -->
                            <input type="email" placeholder="Enter email" name="email"  required>
                            <button type="submit" class="btn">submit</button>
                            
                            
                        </form>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof success !== 'undefined' && success) { %>
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Email Sent!',
                text: 'Check your email for the reset link.',
            });
        </script>
    <% } else if (typeof error !== 'undefined' && error) { %>
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: 'Something went wrong. Please try again.',
            });
        </script>
    <% } else if (typeof userNotFound !== 'undefined' && userNotFound) { %>
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Email Not Found!',
                text: 'No account found with that email address.',
            });
        </script>
    <% } %>


   
    
    
    
</body>
</html>
